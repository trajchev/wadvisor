style.
  /* Remove spaces around the email design added by some email / desktop / browser clients */
  html, body {
  padding: 0;
  margin: 0;
  height: 100% !important;
  width: 100% !important;
  font-family: Arial, sans-serif;
  background: #ffffff;
  -webkit-text-size-adjust: none;
  -ms-text-size-adjust: none;
  -mso-text-size-adjust: none;
  text-size-adjust: none;
  }
  /* Default value for text-size. No font size adjustment */
  *, table, td, a, span, sup, sub {
  -webkit-text-size-adjust: none;
  -ms-text-size-adjust: none;
  -mso-text-size-adjust: none;
  text-size-adjust: none;
  }
  /* Remove browser defaults for margin and padding and set the line-height to 100%*/
  a, span, td {
  padding: 0;
  margin: 0;
  line-height: 100%;
  }
  /* Centers email on Android 4.4 */
  div[style*="margin: 16px 0"] {
  margin: 0 !important;
  }
  /* Stops Outlook from adding extra spacing to tables */
  table,  td {
  mso-table-lspace: 0pt !important;
  mso-table-rspace: 0pt !important;
  }
  /* Fixes webkit border-spacing and table layou issue. */
  table, tbody, tr, td {
  border-spacing: 0 !important;
  border-collapse: collapse !important;
  table-layout: auto !important;
  margin: 0 auto !important;
  }
  /* Fixes webkit padding / margin issue. */
  table, tbody, tr, td {
  padding: 0;
  margin: 0;
  }
  /* Sets the font size of the table row */
  tr {
  font-size: 1px;
  mso-line-height-alt: 0;
  mso-margin-top-alt: 1px;
  }
  /* resets the default styles on the links and images */
  a, a:focus, a:active, img:focus, img:active, img {
  outline: none;
  text-decoration: none;
  border: 0px;
  margin: 0px;
  padding: 0px;
  }
  /* sets to auto the table layout of the nested tables */
  table table table {
  table-layout: auto;
  }
  /* Uses a better rendering method when resizing images in IE */
  img {
  -ms-interpolation-mode: bicubic;
  border: 0 !important;
  outline: 0 !important;
  line-height: 100%;
  text-decoration: none;
  }
  /* Overrides styles added when Yahoo's auto-senses a link */
  .yshortcuts a {
  border-bottom: none !important;
  }
  /* Another work-around for iOS meddling in triggered links */
  a[x-apple-data-detectors].nonblue-link, span[x-apple-data-detectors].nonblue-link {
  color: inherit !important;
  text-decoration: none !important;
  font-size: inherit !important;
  font-family: inherit !important;
  line-height: inherit !important;
  }
  /* Removes the default text decoration from the links */
  a:-webkit-any-link {
  color: inherit;
  text-decoration: none;
  }
  /* Remove blue gMail links */
  u + #body a {
  color: inherit;
  text-decoration: none;
  font-size: inherit;
  font-family: inherit;
  font-weight: inherit;
  line-height: inherit;
  }
  /* PreHeader text */
  .preheader {
  display: none !important;
  visibility: hidden;
  opacity: 0;
  color: transparent;
  height: 0;
  width: 0;
  }
  /* Resets to 0 the padding around links in Outlook */
  #outlook a {
  padding: 0;
  }
  /* Custom NewsLetter styles */
  .desktop-table {
  display: none !important;
  }
  .mobile-table {
  display: table !important;
  width: 100%;
  }
  /* Media Queries */
  @media only screen and (min-width: 320px) and (max-width: 599px) {
  .desktop-table {
  width: 100% !important;
  margin: auto;
  }
  }
  @media only screen and (min-width: 320px) and (max-width: 479px) {
  }
  @media only screen and (min-width: 600px) {
  .desktop-table {
  display: table !important;
  width: 100%;
  }
  .mobile-table {
  display: none !important;
  -mso-hide: all !important;
  }
  }
